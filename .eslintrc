{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "require": true
  },
  "extends": [
    "airbnb-base",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "rules": {
    "semi": [2, "never"],
    "no-restricted-syntax": 0,
    "import/prefer-default-export": 0,
    "comma-dangle": [2, "never"],
    "no-empty-pattern": 0,
    "no-new": 0,
    "no-console": 0,
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "global-require": 0
  }
}